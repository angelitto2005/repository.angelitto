            id="lang_ro"
            type="bool"
            label="    Română"
            default="true"
            enable="eq(-2,1)"
        />
        <setting
            id="lang_en"
            type="bool"
            label="    Engleză"
            default="true"
            enable="eq(-3,1)"
        />
        <setting
            id="lang_fr"
            type="bool"
            label="    Franceză"
            default="false"
            enable="eq(-4,1)"
        />
        <setting
            id="lang_it"
            type="bool"
            label="    Italiană"
            default="false"
